{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "almond",
  "name": "Omnipair Docs",
  "colors": {
    "primary": "#3C64FF",
    "light": "#6597FF",
    "dark": "#243FD9"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "global": {
      "anchors": [
        {
          "anchor": "GitHub",
          "icon": "github",
          "hidden": true,
          "href": "https://github.com/omnipair"
        },
        {
          "anchor": "Discord",
          "icon": "discord",
          "hidden": true,
          "href": "https://discord.gg/omnipair"
        }
      ]
    },
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Introduction",
            "pages": [
              "index",
              "introduction",
              "omnipair/problem",
              "omnipair/solution"
            ]
          },
          {
            "group": "Technical breakdown",
            "pages": [
              "technical-breakdown/overview",
              "technical-breakdown/generalized-automated-market-maker",
              "technical-breakdown/slippage-aware-collateral-factor",
              "technical-breakdown/liquidations-debt-write-off",
              "technical-breakdown/risk-and-safe-design",
              "technical-breakdown/customizable-pools"
            ]
          },
          {
            "group": "Governance",
            "pages": [
              "governance/what-is-omfg",
              "governance/governance-model",
              "governance/protocol-governable-parameters"
            ]
          },
          {
            "group": "Use cases",
            "pages": [
              "use-cases/leveraging",
              "use-cases/borrowing",
              "use-cases/liquidity-provisioning-earn"
            ]
          }
        ]
      },
      {
        "tab": "Code Reference",
        "groups": [
          {
            "group": "API documentation",
            "pages": [
              "api-reference/introduction"
            ]
          },
          {
            "group": "Endpoint examples",
            "pages": [
              "api-reference/endpoint/get",
              "api-reference/endpoint/create",
              "api-reference/endpoint/delete",
              "api-reference/endpoint/webhook"
            ]
          }
        ]
      }
    ]
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "https://discord.gg/omnipair"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Launch App",
      "href": "https://app.omnipair.fi"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/omnipair",
      "github": "https://github.com/omnipair",
      "discord": "https://discord.gg/omnipair"
    }
  },
  "appearance": {
    "default": "system"
  },
  "background": {
    "decoration": "gradient",
    "image": {
      "light": "/images/bg-light.png",
      "dark": "/images/bg-dark.png"
    }
  },
  "description": "Omnipair enables permissionless spot and margin trading without oracles, using isolated collateral pools and on-chain mechanisms to support long-tail markets on Solana.",
  "thumbnails": {
    "background": "/images/thumbnail.svg"
  },
  "styling": {
    "eyebrows": "breadcrumbs"
  }
}